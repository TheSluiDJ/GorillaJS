        <script>
            var mySound = new buzz.sound("sound/juliancalor.mp3");
            var played = false;
            $(document).ready(function(){
                $('#musica').click(function(){
                    mySound.togglePlay().loop();
                    if(!played){
                       // $(this).text("MUSIC ON");
                        $(this).css("background-position","0px 0px");
                        played = true;
                    }else{
                       // $(this).text("MUSIC OFF");
                        $(this).css("background-position","80px 0px");
                        played = false;
                    }
                });      
            });
        </script>
