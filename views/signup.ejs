<!-- views/signup.ejs -->
<!doctype html>
<html>
    <head>
        <title>Gorilla[js] | Registra't</title>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
        <script type="text/javascript" src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
        <link rel="stylesheet" type="text/css" href="css/main.css">
        <script>
            $(document).ready(function(){
                $(".container").fadeIn('2000');         
            });
        </script>
        <style>
            .container{display:none}
            body { padding-top:80px; }
        </style>
    </head>
    <body id="indexbody">
        <div class="container" id="containerlogin">

            <div class="col-sm-6 col-sm-offset-3">

                <h1><span class="fa fa-sign-in"></span> Registra't</h1>

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form action="/signup" method="post">
                    <div class="form-group">
                        <label>Nom d'usuari</label>
                        <input type="text" class="form-control" name="username">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>

                    <button type="submit" class="btn btn-warning btn-lg">Registrar-se!</button>
                </form>

                <hr>

                <p>Ja tens compte? <a href="/login">Inicia Sessió</a></p>
                <p>O bé retorna a <a href="/">l'Inici</a>.</p>

            </div>

        </div>
    </body>
</html>

